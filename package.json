{
  "name": "psychpedia-landing-v2",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001 --webpack",
    "build": "npm run build:search-index && npm run validate:all && next build",
    "build:search-index": "tsx scripts/build-search-index.ts",
    "start": "next start",
    "lint": "next lint",
    "validate:content": "tsx scripts/validate-content.ts",
    "validate:citations": "tsx scripts/validate-citations.ts",
    "validate:all": "npm run validate:content && npm run validate:citations",
    "db:up": "docker compose -f docker/docker-compose.db.yml up -d",
    "db:down": "docker compose -f docker/docker-compose.db.yml down",
    "db:logs": "docker compose -f docker/docker-compose.db.yml logs -f",
    "db:psql": "docker exec -it psychpedia-db psql -U psychpedia -d psychpedia",
    "db:reset": "docker compose -f docker/docker-compose.db.yml down -v && docker compose -f docker/docker-compose.db.yml up -d",
    "db:status": "docker compose -f docker/docker-compose.db.yml ps",
    "dev:cms": "cd cms && source ../.venv/bin/activate && python manage.py runserver 0.0.0.0:8000",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:cms\""
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^16.1.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "graphql": "^16.12.0",
    "gray-matter": "^4.0.3",
    "next": "^16.1.1",
    "next-intl": "^4.6.1",
    "next-mdx-remote": "^5.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sharp": "^0.34.5",
    "zod": "^4.3.2"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/pg": "^8.11.10",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "concurrently": "^9.1.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5"
  },
  "overrides": {
    "undici": "6.21.0"
  }
}
